server {
    listen {{artifactory_proxy_port}};
    return 301 https://$host$request_uri;
}


server {
    listen            {{artifactory_https_port}};
{% if artifactory_host_name %}
    server_name       {{artifactory_host_name}};
{% endif %}
    

if ($http_x_forwarded_proto = '') {
        set $http_x_forwarded_proto  $scheme;
    }

	ssl_certificate           {{artifactory_ssl_cert}};
	ssl_certificate_key       {{artifactory_ssl_key}};

	ssl on;

	ssl_session_cache shared:SSL:1m;
	ssl_prefer_server_ciphers on;
	

#	ssl on;
#    ssl_session_cache  builtin:1000  shared:SSL:10m;
#    ssl_protocols  TLSv1 TLSv1.1 TLSv1.2;
#    ssl_ciphers HIGH:!aNULL:!eNULL:!EXPORT:!CAMELLIA:!DES:!MD5:!PSK:!RC4;
#    ssl_prefer_server_ciphers on;

    rewrite ^/$ /webapp/ redirect;
    rewrite ^/webapp$ /webapp/ redirect;


    location / {
    	proxy_read_timeout  900;
    	proxy_pass_header   Server;
	proxy_cookie_path ~*^/.* /;
    	proxy_pass         http://{{artifactory_host_name}}:{{artifactory_http_port}}/artifactory/;
#proxy_set_header   X-Artifactory-Override-Base-Url $http_x_forwarded_proto://{{artifactory_host_name}}:{{artifactory_http_port}}/artifactory/;
#	proxy_set_header   X-Artifactory-Override-Base-Url $http_x_forwarded_proto://$<host>:<server port>/<public context>;
	proxy_set_header    X-Forwarded-Port  $server_port;
	proxy_set_header    X-Forwarded-Proto $http_x_forwarded_proto;
	proxy_set_header    Host              $http_host;
	proxy_set_header    X-Forwarded-For   $proxy_add_x_forwarded_for;
    }

    ## Application specific logs
    error_log         /var/log/nginx/artifactory-nginx-error.log;
    access_log        /var/log/nginx/artifactory-nginx-access.log;

}