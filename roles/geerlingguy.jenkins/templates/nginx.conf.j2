server {
    listen {{jenkins_proxy_port}};
    return 301 https://$host$request_uri;
}

server {
    listen            {{jenkins_https_port}};
{% if jenkins_hostname %}
    server_name       {{jenkins_hostname}};
{% endif %}
    
	ssl_certificate           {{jenkins_ssl_cert}};
    ssl_certificate_key       {{jenkins_ssl_key}};

	ssl on;
    ssl_session_cache  builtin:1000  shared:SSL:10m;
    ssl_protocols  TLSv1 TLSv1.1 TLSv1.2;
    ssl_ciphers HIGH:!aNULL:!eNULL:!EXPORT:!CAMELLIA:!DES:!MD5:!PSK:!RC4;
    ssl_prefer_server_ciphers on;
	
    location / {
	
		proxy_set_header Host $jenkins_hostname;
		proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
		# Fix the â€œIt appears that your reverse proxy set up is broken" error.
{% if jenkins_hostname %}
        proxy_pass http://{{jenkins_hostname}}:{{jenkins_http_port}};
        proxy_redirect http://{{jenkins_hostname}}:{{jenkins_http_port}} https://{{jenkins_hostname}};
{% endif %}
        
	}

    error_log         {{jenkins_logdir}}/nginx-error.log;
    access_log        {{jenkins_logdir}}/nginx-access.log;

}